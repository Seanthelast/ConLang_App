<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/word_info_layout"
    android:layout_margin="15dp">

    <!-- First Group of TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Title 1"
            android:id="@+id/word_info_title_1"
            tools:ignore="Suspicious0dp" />

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Data 1"
            android:id="@+id/word_info_data_1"/>
    </LinearLayout>

    <!-- Second Group of TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Title 2"
            android:id="@+id/word_info_title_2"/>

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Data 2"
            android:id="@+id/word_info_data_2"/>
    </LinearLayout>

    <!-- Third Group of TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Title 3"
            android:id="@+id/word_info_title_3"/>

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Data 3"
            android:id="@+id/word_info_data_3"/>
    </LinearLayout>

    <!-- Fourth Group of TextViews -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Title 4"
            android:id="@+id/word_info_title_4"/>

        <TextView
            android:layout_width="90dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Data 4"
            android:id="@+id/word_info_data_4"/>
    </LinearLayout>

</LinearLayout>
